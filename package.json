{
  "name": "text_flow_chart",
  "version": "0.0.1",
  "description": "Text flow chart is creating flow charts from bulleted text.",
  "main": "dist/index.js",
  "types": "dist/text_flow_chart.d.ts",
  "typings": "dist/text_flow_chart.d.ts",
  "module": "dist/index.es.js",
  "browser": "dist/text-flow-chart.js",
  "files": [
    "packages.json",
    "types",
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "lint:typecheck": "tsc",
    "lint:eslint": "cross-env EFF_NO_LINK_RULES=true eslint . --format friendly",
    "lint:prettier": "prettier . \"!test*\" --check",
    "fix": "run-s fix:eslint fix:prettier",
    "fix:eslint": "yarn lint:eslint --fix",
    "fix:prettier": "yarn lint:prettier --write",
    "test": "run-s test:transpile test:exec",
    "test:exec": "jest",
    "test:transpile": "yarn tsc --noEmit false --sourcemap --outDir ./dist ./src/dot.ts",
    "build": "run-s build:cleanup build:exec",
    "build:exec": "rollup -c",
    "build:cleanup": "rimraf dist"
  },
  "keywords": [
    "flowchart"
  ],
  "author": "sa2taka",
  "license": "MIT",
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/tests/**/*.test.ts"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.13.8",
    "@babel/preset-env": "^7.13.9",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^17.1.0",
    "@rollup/plugin-node-resolve": "^11.2.0",
    "@types/d3-graphviz": "^2.6.6",
    "@types/jest": "^26.0.20",
    "@types/rewire": "^2.5.28",
    "babel-jest": "^26.6.3",
    "babel-plugin-rewire": "^1.2.0",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.1.0",
    "husky": "^5.1.3",
    "jest": "^26.6.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "rewire": "^5.0.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.40.0",
    "rollup-plugin-dts": "^3.0.1",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.30.0",
    "ts-jest": "^26.5.3",
    "tslib": "^2.1.0",
    "typescript": "^4.2.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "precommit"
    }
  },
  "dependencies": {
    "d3-graphviz": "^3.1.0"
  }
}
