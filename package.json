{
  "name": "text_flow_chart",
  "version": "0.0.1",
  "description": "Text flow chart is creating flow charts from bulleted text.",
  "main": "dist/index.js",
  "types": "dist/text_flow_chart.d.ts",
  "typings": "dist/text_flow_chart.d.ts",
  "module": "dist/index.es.js",
  "browser": "dist/text-flow-chart.js",
  "files": [
    "packages.json",
    "types",
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "lint:typecheck": "tsc",
    "lint:eslint": "cross-env EFF_NO_LINK_RULES=true eslint . --format friendly",
    "lint:prettier": "prettier . \"!test*\" --check",
    "fix": "run-s fix:eslint fix:prettier",
    "fix:eslint": "yarn lint:eslint --fix",
    "fix:prettier": "yarn lint:prettier --write",
    "test": "run-s test:exec",
    "test:exec": "jest",
    "build": "run-s build:cleanup build:exec build:copy-js",
    "build:exec": "rollup -c",
    "build:cleanup": "rimraf dist",
    "build:copy-js": "cpx -C dist/text-flow-chart.min.js docs",
    "watch": "run-p watch:html watch:exec watch:server",
    "watch:exec": "rollup -c rollup-debug.config.js --configDebug --watch",
    "watch:server": "live-server dist",
    "watch:html": "run-s watch:copy-html watch:replace-html",
    "watch:copy-html": "cpx -C docs/index.html dist/",
    "watch:replace-html": "replace text-flow-chart\\.min\\.js text-flow-chart.js dist/index.html"
  },
  "watch": {
    "watch:copy-js": "dist/text-flow-chart.js"
  },
  "keywords": [
    "flowchart"
  ],
  "author": "sa2taka",
  "license": "MIT",
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/tests/**/*.test.ts"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.13.8",
    "@babel/preset-env": "^7.13.9",
    "@babel/preset-typescript": "^7.13.0",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^17.1.0",
    "@rollup/plugin-node-resolve": "^11.2.0",
    "@types/d3-graphviz": "^2.6.6",
    "@types/jest": "^26.0.20",
    "@types/mathjs": "^6.0.11",
    "@types/rewire": "^2.5.28",
    "babel-jest": "^26.6.3",
    "babel-plugin-rewire": "^1.2.0",
    "cpx": "^1.5.0",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.1.0",
    "husky": "^5.1.3",
    "jest": "^26.6.3",
    "live-server": "^1.2.1",
    "npm-run-all": "^4.1.5",
    "npm-watch": "^0.9.0",
    "prettier": "^2.2.1",
    "replace": "^1.2.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.40.0",
    "rollup-plugin-dts": "^3.0.1",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.30.0",
    "ts-jest": "^26.5.3",
    "tslib": "^2.1.0",
    "typescript": "^4.2.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "precommit"
    }
  },
  "dependencies": {
    "d3-graphviz": "^3.1.0",
    "mathjs": "^9.3.2"
  }
}